{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": ["src/**/*", "test/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  }
}
