{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "types": ["node", "mocha", "chai"],
    "experimentalDecorators": true,
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  }
}
